{
  "name": "lean-prompt-garden",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "generate-prompts": "node scripts/generate-prompts.mjs",
    "prepare": "npm run generate-prompts",
    "dev": "npm run generate-prompts && vite",
    "build": "npm run generate-prompts && tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:fast": "vitest run --reporter=default",
    "test:unit": "vitest run src/utils src/hooks",
    "test:components": "vitest run src/components",
    "test:changed": "vitest run --changed",
    "test:single": "vitest run --singleThread",
    "test:profile": "vitest run --reporter=verbose --slowTestThreshold=1000",
    "typecheck": "tsc --noEmit",
    "validate": "./scripts/validate.sh",
    "validate:coverage": "./scripts/validate.sh --coverage",
    "build:pages": "NODE_ENV=production npm run build",
    "postinstall": "git config core.hooksPath .githooks || true"
  },
  "dependencies": {
    "@headlessui/react": "1.7.17",
    "@heroicons/react": "^2.2.0",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.7.0",
    "rehype-sanitize": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.1.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.20.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vitest": "^3.1.1"
  }
}